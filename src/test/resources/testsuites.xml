<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Test" thread-count="1" parallel="classes">
    <test name="test 1">
        <groups>
            <run>
                <exclude name="excludeFailed"></exclude>
            </run>
        </groups>
        <classes>
            <class name="tests.uitests.CreateANewProjectTest"></class>
            <parameter name="browser" value="chrome"></parameter>
        </classes>
    </test> <!-- Test -->
    <test name="test 2">
        <classes>
            <class name="tests.uitests.CreateANewTestCaseTest"/>
            <parameter name="browser" value="firefox"></parameter>
        </classes>
    </test> <!-- Test -->

</suite>
